                },
                "created_at": {
                    "description": "Created Time",
                    "type": "string"
                },
                "id": {
                    "description": "Unsigned bigint",
                    "type": "integer"
                },
                "title": {
                    "description": "Article Title",
                    "type": "string"
                },
                "updated_at": {
                    "description": "Updated Time",
                    "type": "string"
                }
            }
        },
        "model.Course": {
            "type": "object",
            "properties": {
                "articles": {
                    "description": "One-to-many relationship",
