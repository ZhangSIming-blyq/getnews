        "model.News": {
            "description": "新闻",
            "type": "object",
            "properties": {
                "created_at": {
                    "type": "string"
                },
                "link": {
                    "type": "string"
                },
                "rank": {
                    "type": "integer"
                },
                "source": {
                    "description": "Source means different news sources, such as Weibo, Zhihu, etc.",
                    "type": "string"
                },
                "title": {
                    "type": "string"
                },
                "updated_at": {
                    "type": "string"
                }
            }
        }
    }
}